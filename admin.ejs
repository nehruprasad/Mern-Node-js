<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">

    <!-- Admin Dashboard Sidebar -->
     <!-- #endregion -->
      
    
    <div class="flex">
        <aside class="w-64 bg-gray-800 text-white min-h-screen">
            <div class="p-5">
                <h2 class="text-2xl font-semibold">Admin Dashboard</h2> 
                <nav class="mt-6">
                    <ul>
                        <li><a href="/" class="block px-4 py-2 text-gray-300 hover:text-white">Home</a></li>
                        <li><a href="/admin/users" class="block px-4 py-2 text-gray-300 hover:text-white">Manage Users</a></li>
                        <li><a href="/admin/mood-log" class="block px-4 py-2 text-gray-300 hover:text-white">Mood Log</a></li>
                        <li><a href="/admin/stress-level" class="block px-4 py-2 text-gray-300 hover:text-white">Stress Level</a></li>
                        <li><a href="/admin/affirmations" class="block px-4 py-2 text-gray-300 hover:text-white">Affirmations</a></li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main content area -->
        <div class="flex-1 p-6">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-3xl font-semibold">Manage Users</h1>
                <a href="/logout" class="text-white bg-red-500 hover:bg-red-700 px-4 py-2 rounded-md">Logout</a>
            </div>

            <!-- User Management Table -->
            <div class="overflow-x-auto bg-white rounded-lg shadow-md">
                <table class="min-w-full table-auto">
                    <thead class="bg-gray-200">
                        <tr>
                            <th class="px-4 py-2 text-left">Username</th>
                            <th class="px-4 py-2 text-left">Email</th>
                            <th class="px-4 py-2 text-left">Role</th>
                            <th class="px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through users here -->
                        <% users.forEach((user) => { %>
                            <tr class="border-b">
                                <td class="px-4 py-2"><%= user.username %></td>
                                <td class="px-4 py-2"><%= user.email %></td>
                                <td class="px-4 py-2"><%= user.role %></td>
                                <td class="px-4 py-2">
                                    <a href="/admin/edit/<%= user.id %>" class="text-blue-500 hover:text-blue-700">Edit</a>
                                    <a href="/admin/delete/<%= user.id %>" class="text-red-500 hover:text-red-700 ml-4">Delete</a>
                                    <a href="/admin/delete/<%= user.id %>" class="text-red-500 hover:text-red-700 ml-4">Delete</a>

                                  </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</body>

</html>

































































































































